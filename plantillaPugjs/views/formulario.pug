html
  head
    title Formulario pug
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
        h1(style='color:red')= titulo

        form(action="/productos"  method="post")
            div(class="mb-3")
                label(for="nombre" class="form-label") Nombre
                input(type="text" class="form-control" name='title')
            div(class="form-text")
                label(for="precio" class="form-label") URL Miniatura
                input(type="text" class="form-control" name='thumbnail')
            div(class="form-text")
                label(for="precio" class="form-label") Precio
                input(type="number" class="form-control" name='price')
            button(type="submit" class="btn btn-success") Enviar
            button( class="btn btn-secondary")
                a(href='./productos' style='text-decoration: none; color:black') Ver productos