html
  head
    title Productos pug
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    h1(style='color:red', class='text-center') VISTA DE PRODUCTOS
    div(class="container bg-secondary")
        div(class="row")
            div(class="col")
                p Nombre
            div(class="col")
                p Precio
            div(class="col")
             p Miniatura
    div(class="container bg-secondary")  
        each val in datos
            div(class="row bg-secondary")
                    div(class="col")
                        p= val.title
                    div(class="col")
                        p= val.price
                    div(class="col-" style="width: 5rem")
                        img(src=`${val.thumbnail}`, alt="", srcset="" class='card-img-top')
        else   
            h2 No hay productos
            